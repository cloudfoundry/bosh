---
aws:
  secret_access_key: <%= ENV["AWS_SECRET_ACCESS_KEY"] || raise("Missing ENV variable AWS_SECRET_ACCESS_KEY") %>
  access_key_id: <%= ENV["AWS_ACCESS_KEY_ID"] || raise("Missing ENV variable AWS_ACCESS_KEY_ID") %>
  region: us-east-1
name: <%= ENV["VPC_SUBDOMAIN"]  || raise("Missing ENV variable VPC_SUBDOMAIN") %>
vpc:
  domain: <%= ENV["VPC_SUBDOMAIN"] %>.cf-app.com
  instance_tenancy: default
  cidr: 10.10.0.0/16
  subnets:
    bosh:
      cidr: 10.10.0.0/24
      availability_zone: us-east-1c
  dhcp_options:
    domain_name_servers:
      - 10.10.0.5  # IP of the BOSH DNS server?
      - 10.10.0.2  # local amazon public DNS server
  security_groups:
    - name: bosh
      ingress:
        - protocol: tcp
          ports: '0 - 65535'
          sources: 0.0.0.0/0
        - protocol: udp
          ports: '0 - 65535'
          sources: 0.0.0.0/0
    - name: bat
      ingress:
        - protocol: tcp
          ports: '4567'
          sources: 0.0.0.0/0
        - protocol: tcp
          ports: '22'
          sources: 0.0.0.0/0
    - name: cf
      ingress:
        - protocol: tcp
          ports: '0 - 65535'
          sources: 0.0.0.0/0
        - protocol: udp
          ports: '0 - 65535'
          sources: 0.0.0.0/0
elastic_ips:
  router:
    instances: 1
    dns_record: "*"
    ttl: 60
  micro:
    instances: 1
    dns_record: "micro"
    ttl: 60
  bat:
    instances: 1
    dns_record: "bat"
    ttl: 60

key_pairs:
  <%= ENV["BOSH_KEY_PAIR_NAME"] || "bosh" %>: <%= ENV["BOSH_KEY_PATH"] || "#{ENV["HOME"]}/.ssh/id_bosh_rsa" %>

s3:
  - bucket_name: <%= (ENV["VPC_SUBDOMAIN"] || raise("Missing ENV variable VPC_SUBDOMAIN")) + "-bosh-blobstore" %>
    tag: blobstore
