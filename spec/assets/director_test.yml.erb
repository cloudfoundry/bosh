---
name: Test Director
port: <%= director_port %>
mbus: nats://localhost:<%= nats_port %>
logging:
  level: DEBUG
redis:
  host: 127.0.0.1
  port: <%= redis_port %>
  password:
dir: <%= sandbox_root %>/boshdir
scheduled_jobs:
  - command: SnapshotDeployments
    schedule: '*/2 * * * * *'
  - command: ScheduledBackup
    schedule: '*/1 * * * * *'
db:
  adapter: postgres
  database: <%= db_name %>
  # Settings are set to defaults since DbBackup
  # currently does not support export without them
  host: 127.0.0.1
  port: 5432
  user: postgres
  password: null
  connection_options:
    max_connections: 32
    pool_timeout: 10
dns:
  db:
    adapter: postgres
    database: <%= db_name %>
    connection_options:
      max_connections: 32
      pool_timeout: 10
blobstore:
  provider: simple
  options:
    endpoint: http://127.0.0.1:<%= blobstore_port %>
    user: bs_admin
    password: bs_pass
backup_destination:
  provider: local
  options:
    blobstore_path: <%= sandbox_root %>/backup_destination
compiled_package_cache:
  provider: simple
  options:
    endpoint: http://127.0.0.1:<%= blobstore_port %>
    user: bs_admin
    password: bs_pass
scan_and_fix:
  auto_fix_stateful_nodes: <%= director_fix_stateful_nodes || false %>
snapshots:
  enabled: true
cloud:
  plugin: dummy
  properties:
    nats: nats://localhost:<%= nats_port %>
    dir: <%= cloud_storage_dir %>
    agent:
      blobstore:
        provider: simple
        options:
          endpoint: http://127.0.0.1:<%= blobstore_port %>
          user: bs_admin
          password: bs_pass
      server:
        host: 127.0.0.1
        password:
