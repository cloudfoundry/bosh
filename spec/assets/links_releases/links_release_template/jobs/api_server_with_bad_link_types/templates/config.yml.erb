---
databases:
  main:
<% link('db').instances.each do |instance| %>
  - name: <%= instance.name %>
    index: <%= instance.index %>
    address: <%= instance.address %>
<% end %>
  backup:
<% link('backup_db').instances.each do |instance| %>
  - name: <%= instance.name %>
    az: <%= instance.az %>
    index: <%= instance.index %>
    address: <%= instance.address %>
<% end %>

<% if_link('optional_link_name') do |link| %>
    optional_key: optional_key_value
<% end %>

