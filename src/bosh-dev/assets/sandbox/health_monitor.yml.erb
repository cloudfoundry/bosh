---
http:
  port: <%= hm_port %>

mbus:
  endpoint: nats://localhost:<%= nats_port %>
  user:
  password:
  ca_path: <%= get_nats_server_ca_path %>

director: &director
  endpoint: <%= director_url %>
  user: hm
  password: pass
  client_id: hm
  client_secret: secret
  ca_cert: <%= certificate_path %>

intervals:
  poll_director: 5
  poll_grace_period: 5
  log_stats: 10
  analyze_agents: 10
  agent_timeout: 10
  rogue_agent_alert: 20

loglevel: debug

plugins:
  - name: logger
    events:
      - alert
      - heartbeat
  - name: resurrector
    events:
      - alert
    options:
      director: *director
  - name: event_logger
    events:
      - alert
    options:
      director: *director
