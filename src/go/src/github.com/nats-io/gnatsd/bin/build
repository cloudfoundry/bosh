#!/bin/bash 

set -e

bin=$(dirname $0)

goversion=`$bin/go version | awk '{print $3}'`

if [ "$goversion" ==  "devel" ]; then
  echo "Using 'devel' version, make sure it's go1.7 or greater"
else
  MINOR=`echo $goversion | cut -f2 -d.`
  if [ $MINOR -lt 7 ]; then
    echo "Currently using go version $goversion, must be using go1.7 or greater"
    exit 1
  fi
fi

$bin/go build -o $bin/../out/bosh-gnatsd github.com/nats-io/gnatsd
