net: <%= p("gonats.listen_address") %>
port: <%= p("gonats.port") %>

logtime: true

pid_file: /var/vcap/sys/run/gonats/gnatsd.pid
log_file: /var/vcap/sys/log/gonats/gnatsd.log

authorization {
  user: "<%= p("gonats.user") %>"
  password: "<%= p('gonats.password') %>"
  timeout: <%= p('gonats.auth_timeout') %>
}

tls {
  cert_file:  "/var/vcap/jobs/gonats/config/go_nats_cert.pem"
  key_file:   "/var/vcap/jobs/gonats/config/go_nats_key.key"
  timeout:    2
}

ping_interval: <%= p('gonats.ping_interval') %>
ping_max: <%= p('gonats.ping_max_outstanding') %>
