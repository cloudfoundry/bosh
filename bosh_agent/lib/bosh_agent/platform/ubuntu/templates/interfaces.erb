auto lo
iface lo inet loopback

<% networks.each do |name, n| -%>
auto <%= n["interface"] %>
iface <%= n["interface"] %> inet static
    address <%= n["ip"]%>
    network <%= n["network"] %>
    netmask <%= n["netmask"]%>
    broadcast <%= n["broadcast"] %>
<% if n.key?('default') && n['default'].include?('gateway') -%>
    gateway <%= n["gateway"] %>
<% end %>
<% end -%>
