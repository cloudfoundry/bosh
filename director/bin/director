#!/usr/bin/env ruby
#
ENV["BUNDLE_GEMFILE"] ||= File.expand_path("../../Gemfile", __FILE__)

require "rubygems"
require "bundler/setup"

$LOAD_PATH.unshift(File.dirname(__FILE__) + "/../lib")

require "director"
require "thin"

config_file = nil

opts = OptionParser.new do |opts|
  opts.on("-c", "--config [ARG]", "Configuration File") do |opt|
    config_file = opt
  end
end

opts.parse!(ARGV.dup)

config_file ||= ::File.expand_path("../../config/bosh-director.yml", __FILE__)
config = YAML.load_file(config_file)

Bosh::Director::Config.configure(config)

event_thread = Thread.new { EM.run }

thin_server = Thin::Server.new("0.0.0.0", config["port"], :signals => false) do
  use Rack::CommonLogger
  map "/" do
    run Bosh::Director::Controller.new
  end
end

["TERM", "INT", "QUIT"].each do |signal|
  trap(signal) do
    thin_server.stop!
    EM.stop
  end
end

thin_server.start!
event_thread.join
